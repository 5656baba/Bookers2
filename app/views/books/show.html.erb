<div class="container">
  <div class="row">
    <%= render 'users/list', user: @user, book: @new_book %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br>
            <%= link_to @user.name, user_path(@user.id) %></td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-outline-secondary btn-block btn-secondary size" %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-outline-secondary btn-block btn-secondary size", data: {confirm: "Are you certain you want to delete this?"} %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= render 'devise/shared/footer' %>