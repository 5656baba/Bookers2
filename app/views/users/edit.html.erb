<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", autocomplete: "name" %>
  <label for="imageSelection">Image</label>
  <%= f.attachment_field :profile_image, id:"imageSelection", placeholder: "Image" %>
  <label for="inputIntroduction">Introduction</label>
  <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", autocomplete: "introduction" %>
  <%= f.submit "Update User" %>
<% end %>