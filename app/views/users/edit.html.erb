<div class="container">
  <div class="error_message">
    <% if @user.errors.any? %>
      <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      </ul>
      <% end %>
    <% end %>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
        <%= form_with model: @user, url: user_path, local:true do |f| %>
          <div class="form-group">
            <label for="user_name">Name</label>
            <input type="text" class="form-control" name="user[name]" id="user_name" value="<%= @user.name %>" >
          </div>
          <div class="form-group">
            <label for="imageSelection">Image<br>
            <%= f.attachment_field :profile_image, id:"imageSelection", placeholder: "Image" %>
            </label>
          </div>
          <div class="form-group">
            <label for="user_introduction">Introduction</label>
            <input type="text" class="form-control" name="user[introduction]" id="user_introduction" value="<%= @user.introduction %>" >
          </div>
          <button type="submit" class="btn btn-primary">Update User</button>
        <% end %>
    </div>
  </div>
</div>

<%= render 'devise/shared/footer' %>